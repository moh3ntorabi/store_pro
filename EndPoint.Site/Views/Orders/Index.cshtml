@using Phoenix_Store.Application.Services.Orders.Queries.GetUserOrders;
@model List<GetUserOrdersDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>سفارشات شما</h1>
<table class="table table-responsive table-active table-bordered">
    <thead>
        <tr>
            <th>شماره سفارش</th>
            <th>شماره فاکتور</th>
            <th>وضعیت سفارش</th>
            <th>محصولات در این سفارش</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.RequestPayId</td>
                <td>@item.OrderState</td>
                <td>
                    <table>
                        @foreach (var detail in item.OrdersDetails)
                        {
                            <tr>
                                <td>@detail.ProductName</td>
                                <td>@detail.Price</td>
                                <td>@detail.Count</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        }
    </tbody>
    
</table>

